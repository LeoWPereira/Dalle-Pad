        android:layout_alignStart="@+id/button11" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button16"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/button15"
        android:layout_toRightOf="@+id/button15"
        android:layout_toEndOf="@+id/button15" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lado esquerdo"
        android:textColor="#218F9A"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/side"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>

