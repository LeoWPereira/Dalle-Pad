<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dallepad.dallepad.MainActivity"
    android:background="@color/blue_bg"
    android:keepScreenOn="true">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/logo2"
        android:src="@mipmap/pnege"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/left_button"
        android:text="Lado esquerdo"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/logo2"
        android:layout_alignLeft="@+id/logo2"
        android:layout_alignStart="@+id/logo2" />

    <Button
        android:id="@+id/right_button"
        android:text="Lado direito"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/left_button"
        android:layout_alignLeft="@+id/left_button"
        android:layout_alignStart="@+id/left_button"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Conectado"
        android:textColor="#218F9A"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:gravity="center"
        android:id="@+id/textView"
        android:layout_below="@+id/right_button"
        android:layout_alignLeft="@+id/right_button"
        android:layout_alignStart="@+id/right_button"
        android:layout_marginTop="10dp"/>

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button1"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button5"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button9"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/button5"
        android:layout_toLeftOf="@+id/button6"
        android:layout_toStartOf="@+id/button6" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button13"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button2"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button3"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button4"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button6"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_above="@+id/button9"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button7"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_above="@+id/button9"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button8"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_above="@+id/button9"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button10"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button11"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_below="@+id/button7"
        android:layout_alignLeft="@+id/button7"
        android:layout_alignStart="@+id/button7" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button12"
        android:src="@mipmap/button"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/button11"
